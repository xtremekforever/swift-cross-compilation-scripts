# Version
SWIFT_VERSION=${SWIFT_VERSION:=swift-6.1-RELEASE}

# Base Paths
SRC_ROOT="${SRC_ROOT:=$(pwd)}"
BUILD_DIR="${BUILD_DIR:=$SRC_ROOT/build}"
WORKSPACE_DIR="${WORKSPACE_DIR:=$SRC_ROOT/workspace}"

# Source & Build Paths
SWIFT_SRCDIR=$WORKSPACE_DIR/swift
SWIFT_BUILDDIR=$BUILD_DIR/swift-linux-$SWIFT_TARGET_ARCH
SWIFT_INSTALL_PREFIX=$SWIFT_BUILDDIR-install
